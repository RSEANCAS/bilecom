            </ul>

            <!--Tabs Content-->
            <div class="tab-content">
                <div id="tab-empresa" class="tab-pane fade active in">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <span class="bg-dark box-block pad-lft pad-rgt">RUC</span>
                                <input class="form-control" placeholder="RUC" name="txt-razon-social" id="txt-razon-social" data-bv-field="txt-razon-social" readonly>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <span class="bg-dark box-block pad-lft pad-rgt">Razón Social</span>
