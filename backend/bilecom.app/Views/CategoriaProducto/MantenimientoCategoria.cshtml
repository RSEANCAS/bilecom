
@{
    ViewBag.Title = "Categoria Mantenimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content-container">
    <div id="page-head">

        <!--Page Title-->
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <div id="page-title">
            @if (Convert.ToInt32(TempData["id"]) == 0)
            {
                <h2 class="page-header text-overflow">Nueva Categoria</h2>
                <input name="txt-opcion" id="txt-opcion" hidden value=@TempData["id"] />
            }
            else
            {
                <h2 class="page-header text-overflow">Editar Categoria</h2>
                <input name="txt-opcion" id="txt-opcion" hidden value=@TempData["id"] />
            }
        </div>
    </div>
    <form id="frm-categoriaproducto-mantenimiento">
        <div id="page-content">
            <div class="panel">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <span class="bg-dark box-block pad-lft pad-rgt">Nombre Categoria</span>
                                <input class="form-control" placeholder="Nombre Categoria" name="txt-nombre" id="txt-nombre" data-bv-field="txt-nombre" >
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-3">
                            <button class="btn btn-primary col-sm-12" id="btn-guardar" name="btn-guardar" type="submit">Guardar</button>
                        </div>
                        <div class="col-sm-3">
                            <a class="btn btn-danger col-sm-12" href="@Url.Content("~/CategoriasProducto/")">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts_footer{
    <script src="@Url.Content("~/Assets/plugins/bootstrap-validator/bootstrapValidator.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/pages/mantenimientocategoriaproducto.js")"></script>
    <script>
        $(document).ready(function () {
            pageMantenimientoCategoriaProducto.Init();
        });
    </script>
}