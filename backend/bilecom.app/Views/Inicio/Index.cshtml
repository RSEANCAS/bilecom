@{
    ViewBag.Titulo = "Dashboard";

}

@section links_footer{
    <link href="@Url.Content("~/Assets/plugins/datatables/media/css/dataTables.bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/plugins/datatables/extensions/Responsive/css/responsive.dataTables.min.css")" rel="stylesheet" />

}

<div id="content-container">
    <div id="page-head">

        <div class="pad-all text-center">
            <h3>Bienvenido al Dashboard de BileCom.</h3>
            <!--<p1>Scroll down to see quick links and overviews of your Server, To do list, Order status or get some Help using Nifty.</p1>-->
        </div>
    </div>


    <!--Page content-->
    <!--===================================================-->
    <div id="page-content">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title text-bold">Ventas mes de <span id="span-mes">Sin Mes</span></h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-sm-3 col-lg-3">

                                <!--Sparkline Area Chart-->
                                <div class="panel panel-info panel-colorful">
                                    <div class="pad-all">
                                        <p class="text-lg text-semibold"><i class="demo-pli-file-word icon-fw"></i> Facturas</p>
                                        <p class="mar-no text-bold">
                                            <span class="pull-right text-bold badge badge-dark" id="span-fa-emitidos">0</span><span class="badge badge-dark">Emitidos</span>
                                        </p>
                                        <p class="mar-top-5 text-danger text-bold">
                                            <span class="pull-right text-bold badge badge-danger" id="span-fa-anulados">0</span><span class="badge badge-danger">Anulados</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3 col-lg-3">
                                <!--Sparkline Line Chart-->
                                <div class="panel panel-mint panel-colorful">
                                    <div class="pad-all">
                                        <p class="text-lg text-semibold"><i class="demo-pli-file-word icon-fw"></i>Boletas</p>
                                        <p class="mar-no text-bold">
                                            <span class="pull-right text-bold badge badge-dark" id="span-bo-emitidos">0</span><span class="badge badge-dark">Emitidos</span>
                                        </p>
                                        <p class="mar-top-5 text-danger text-bold">
                                            <span class="pull-right text-bold badge badge-danger" id="span-bo-anulados">0</span><span class="badge badge-danger">Anulados</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3 col-lg-3">

                                <!--Sparkline bar chart -->
                                <div class="panel panel-purple panel-colorful">
                                    <div class="pad-all">
                                        <p class="text-lg text-semibold"><i class="demo-pli-file-word icon-fw"></i> Notas de Crédito</p>
                                        <p class="mar-no text-bold">
                                            <span class="pull-right text-bold badge badge-dark" id="span-nc-emitidos">0</span><span class="badge badge-dark">Emitidos</span>
                                        </p>
                                        <p class="mar-top-5 text-bold">
                                            <span class="pull-right text-bold badge badge-danger" id="span-nc-anulados">0</span><span class="badge badge-danger">Anulados</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-3 col-lg-3">

                                <!--Sparkline pie chart -->
                                <div class="panel panel-warning panel-colorful">
                                    <div class="pad-all">
                                        <p class="text-lg text-semibold"><i class="demo-pli-file-word icon-fw"></i>Notas de Débito</p>
                                        <p class="mar-no text-bold">
                                            <span class="pull-right text-bold badge badge-dark" id="span-nd-emitidos">0</span><span class="badge badge-dark">Emitidos</span>
                                        </p>
                                        <p class="mar-top-5 text-bold">
                                            <span class="pull-right text-bold badge badge-danger" id="span-nd-anulados">0</span><span class="badge badge-danger">Anulados</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="panel-control">
                            <a class="demo-panel-ref-btn btn btn-default" href="@Url.Action("Facturacion/Ventas", "Reporte")">Ir al reporte de ventas <i class="fa fa-external-link-square"></i></a>
                            @*                            <button class="demo-panel-ref-btn btn btn-default" data-toggle="panel-overlay" data-target="#demo-panel-collapse-default"><i class="demo-psi-repeat-2"></i></button>*@
                        </div>
                        <h3 class="panel-title">Ultimos Documentos Emitidos</h3>
                    </div>

                    <!--Data Table-->
                    <!--===================================================-->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered small" id="tbl-ultimosdocumentos">
                                <thead>
                                    <tr class="bg-primary">
                                        <th class="min-tablet text-center">Tipo Documento</th>
                                        <th class="min-tablet text-center">Documento</th>
                                        <th class="min-tablet text-center">Fecha Emisión</th>
                                        <th class="min-tablet text-center">Importe</th>
                                        <th class="min-tablet text-center">Cliente</th>
                                        <th class="text-left ">Estado en Sunat</th>
                                        <th class="text-left ">Descargar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <hr class="new-section-xs">
                    </div>
                    <!--===================================================-->
                    <!--End Data Table-->

                </div>
            </div>
        </div>

    </div>
    <!--===================================================-->
    <!--End page content-->

</div>

@section scripts_footer{
    <script src="@Url.Content("~/Assets/plugins/datatables/media/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/datatables/media/js/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Assets/js/pages/inicio.js")"></script>
    <script>
        $(document).ready(function () {
            pageInicio.Init();
        });
    </script>
}