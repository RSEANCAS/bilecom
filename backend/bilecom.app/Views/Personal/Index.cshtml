@{
    ViewBag.Title = "Index";
}
@section links_footer{
    <link href="@Url.Content("~/Assets/plugins/datatables/media/css/dataTables.bootstrap.css")" rel="stylesheet"/>
    <link href="@Url.Content("~/Assets/plugins/datatables/extensions/Responsive/css/responsive.dataTables.min.css")" rel="stylesheet" />
}
<div id="content-container">
    <div id="page-head">

        <!--Page Title-->
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <div id="page-title">
            <h1 class="page-header text-overflow">Lista de Personal</h1>
        </div>
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <!--End page title-->
        <!--Breadcrumb-->
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="demo-pli-home"></i></a></li>
                <li><a href="#">Pages</a></li>
                <li class="active">Blank page</li>
            </ol>*@
        <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
        <!--End breadcrumb-->

    </div>


    <!--Page content-->
    <!--===================================================-->
    <div id="page-content">
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Filtros de búsqueda</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-2">
                        <div class="form-group">
                            <label class="control-label">N° Doc. Identidad</label>
                            <input type="text" class="form-control" id="txt-numero-documento-identidad">
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label class="control-label">Nombres Completos</label>
                            <input type="text" class="form-control" id="txt-nombres-completos">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group text-right">
                            <label class="control-label">&nbsp;</label>
                            <div class="clear"></div>
                            @*<button class="btn btn-primary" onclick="$(location).attr('href','Nuevo');">Nuevo</button>*@
                            <a class="btn btn-primary" href="@Url.Content("~/Personal/Nuevo")">Nuevo</a>
                            <button class="btn btn-primary" id="btn-buscar" >Buscar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel">
            <div class="panel-body">
                <table id="tbl-lista" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="sorting_asc" tabindex="0" aria-controls="demo-dt-basic" rowspan="1" colspan="1" style="width: 164px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Name</th>
                            <th style="width:25px" aria-controls="demo-dt-basic" data-column="PersonalId">N°</th>
                            <th data-column="PersonalId">Tipo Doc. Ident.</th>
                            <th class="min-tablet" data-column="PersonalId">N° Doc. Ident.</th>
                            <th class="min-tablet" data-column="PersonalId">Nombres Completos</th>
                            <th class="min-desktop" style="width:130px" data-column="PersonalId">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <!--===================================================-->
    <!--End page content-->

</div>
@section scripts_footer{
    <script src="@Url.Content("~/Assets/plugins/datatables/media/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Assets/plugins/datatables/media/js/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Assets/js/pages/personal.js")"></script>
    <script>
        const urlRoot = "@Url.Content("~")";
        $(document).ready(function () {
            pagePersonal.Init();
        });
    </script>
}


